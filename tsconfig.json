{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true,
    "outDir": "./build",
    "target": "es2015",
    "typeRoots": ["./node_modules/@types/", "./types/"],
    "sourceMap": true
  },
  "include": [
    "app/**/*.js",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}