{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true,
    "outDir": "./build",
    "target": "es2015",
    "baseUrl": "types",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "DOM",
      "ES6",
      "ScriptHost"
    ]
  },
  "include": [
    "types",
    "app/**/*.js",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}